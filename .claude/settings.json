{
  "permissions": {
    "deny": [
      "**/.env*",
      "**/.dev.vars",
      "**/secrets*",
      "**/credentials*",
      "**/*.key",
      "**/*.pem"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$FILEPATH\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
