{
  "name": "gtl",
  "version": "1.0.0",
  "description": "Personal learning platform with flashcards and FAQs",
  "type": "module",
  "scripts": {
    "dev": "npm run build:frontend && wrangler dev",
    "deploy": "npm run build:frontend && wrangler deploy",
    "db:init": "wrangler d1 execute gtl-db --local --file=./src/db/schema.sql",
    "db:init:remote": "wrangler d1 execute gtl-db --remote --file=./src/db/schema.sql",
    "build": "vite build",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.11",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@playwright/test": "^1.57.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.51.0"
  }
}
